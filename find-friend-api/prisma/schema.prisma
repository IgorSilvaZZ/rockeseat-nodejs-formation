generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Org {
  id           String   @id @default(uuid())
  name         String
  email        String   @unique
  phone        String
  passwordHash String
  cep          String
  street       String
  number       String
  neighborhood String
  city         String
  state        String
  createdAt    DateTime @default(now())
}

model Pet {
  id                String   @id @default(uuid())
  name              String
  about             String
  age               String
  size              String
  energyLevel       Int
  // Adicionar ambiente e verificar adição de enums
  independencyLevel String
  photoUrl          String
  requirements      String[]
  createdAt         DateTime @default(now())
}

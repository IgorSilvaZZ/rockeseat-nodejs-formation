generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PetAge {
  PUPPY // Filhote
  ADULT // Adulto
  SENIOR // Idoso
}

enum Levels {
  LOW // Pequeno
  MEDIUM // Médio
  HIGH // Grande
}

enum AmbiencePet {
  SMALL // Apartamento pequeno / studio
  MEDIUM // Apartamento médio ou casa sem quintal
  LARGE // Casa com quintal pequeno
  EXTRA_LARGE // Casa com quintal grande ou área rural
  OUTDOOR // Ambiente externo / fazenda / sítio
}

enum TypePet {
  CAT
  DOG
}

model Org {
  id           String   @id @default(uuid())
  name         String
  email        String   @unique
  phone        String
  passwordHash String
  cep          String
  street       String
  number       String
  neighborhood String
  city         String
  state        String // Sigla do estado
  createdAt    DateTime @default(now())

  Pets Pet[]
}

model Pet {
  id                String      @id @default(uuid())
  name              String
  type              TypePet
  about             String?
  age               PetAge
  size              Levels
  energyLevel       Int // No maximo 5
  independencyLevel Levels
  ambience          AmbiencePet
  requirements      String[]
  orgId             String
  createdAt         DateTime    @default(now())

  org Org @relation(fields: [orgId], references: [id])

  petPhotos PetPhoto[]
}

model PetPhoto {
  id        String   @id @default(uuid())
  url       String
  petId     String
  createdAt DateTime @default(now())

  pet Pet @relation(fields: [petId], references: [id])
}

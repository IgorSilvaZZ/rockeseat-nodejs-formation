generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PetAge {
  PUPPY // Filhote
  ADULT // Adulto
  SENIOR // Idoso
}

enum Levels {
  LOW // Pequeno
  MEDIUM // MÃ©dio
  HIGH // Grande
}

model Org {
  id           String   @id @default(uuid())
  name         String
  email        String   @unique
  phone        String
  passwordHash String
  cep          String
  street       String
  number       String
  neighborhood String
  city         String
  state        String
  createdAt    DateTime @default(now())

  Pets Pet[]
}

model Pet {
  id                String   @id @default(uuid())
  name              String
  about             String?
  age               PetAge
  size              Levels
  energyLevel       Int // No maximo 5
  independencyLevel Levels
  photoUrl          String?
  requirements      String[]
  orgId             String
  createdAt         DateTime @default(now())

  org Org @relation(fields: [orgId], references: [id])
}
